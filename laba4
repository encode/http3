	k1 = -a1 / b1;
	k2 = -a2 / b2;
	k3 = abs(atan(k1));
	k4 = abs(atan(k2));
	k5 = abs(k3 - k4);
	if (k5 == 90) {
		cout << "Перепендикулярны\n";
	}
	else {
		if (k3 > k4) {
			cout << "Угол = " << k3 - k4 << "\n\n";
