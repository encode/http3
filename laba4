///////////////////////task146

	cout << "Задание № 146\n\n";
	int summa = 0;
	cout << "Введите количество квартир\n";
	cin >> y;
	cout << "Введите номер первой квартиры\n";
	cin >> a;
	summa = 0;
	for (x = a; x <= y; x++) {
		summa = summa + x;
	}
	if (summa % 2 == 0) {
		cout << "Сумма номеров квартир четная и равна\n\n " << summa;
	}
	else {
		cout << "Сумма номеров квартир нечетная и равна\n\n " << summa;
