#!/bin/sh

export PREFIX=""
if [ -d 'venv' ] ; then
    export PREFIX="venv/bin/"
fi

set -ex

if [ -z $GITHUB_ACTIONS ]; then
    scripts/check
fi

PYTEST_EXTRA_ARGS=""

if [ -d 'pyodide' ]; then
    PYTEST_EXTRA_ARGS="--dist-dir=pyodide_dist --rt=chrome"
fi


${PREFIX}coverage run -m pytest ${PYTEST_EXTRA_ARGS} "$@" 

if [ -z $GITHUB_ACTIONS ]; then
    scripts/coverage
fi
